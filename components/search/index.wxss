.comm-header-input.active{
	position: relative;
	z-index: 999;
}
.comm-header-input .comm-black{
	width: 100%;
	height: 100%;
	background: #000;
	opacity: 0;
	filter: alpha(opacity = 0);
	display: none;
	position: fixed;
	left: 0;
	top: 0;
}
.comm-header-input .headerInput{
	width: 100%;
	-webkit-display: flex;
	display: flex;
	z-index: 999;
}

.comm-header-input .headerInput .xInput{
	-webkit-flex: 1;
	flex: 1;
	background: #fff;
	border-radius: 8rpx;
	padding-left: 70rpx;
	padding-right: 20rpx;
	position: relative;
}
.comm-header-input .headerInput .xInput .icon{
	width: 50rpx;
	height: 50rpx;
	position: absolute;
	left: 8rpx;
	top: 11rpx;
}
.comm-header-input .headerInput .xInput input{
	height: 70rpx;
	line-height: 70rpx;
}
.comm-header-input .headerInput .xInput.disabled input{
	pointer-events: none;
}
.comm-header-input .headerInput .xInput input.placeholder{
	color: #999;
}
.comm-header-input .headerInput .xFocuer{
	width: 100%;
	height: 100%;
	background: #ccffoo;
	position: absolute;
	left: 0;
	top: 0;
}
.comm-header-input .headerInput .xInput .xClear{
	width: 40rpx;
	height: 40rpx;
	color: #fff;
	background: #ccc;
	border-radius: 50%;
	text-align: center;
	-webkit-transform: rotate(45deg);
	transform: rotate(45deg);
	display: none;
	position: absolute;
	right: 20rpx;
	top: 15rpx;
}
.comm-header-input .headerInput .xInput .xClear:before,
.comm-header-input .headerInput .xInput .xClear:after{
	content: '';
	background: #fff;
	border-radius: 3rpx;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	position: absolute;
	left: 50%;
	top: 50%;
	display: block;
}
.comm-header-input .headerInput .xInput .xClear:before{
	width: 25rpx;
	height: 5rpx;
}
.comm-header-input .headerInput .xInput .xClear:after{
	width: 5rpx;
	height: 25rpx;
}

.comm-header-input .headerInput .xCancel{
	color: #999;
	font-size: 0rpx;
	width: 0rpx;
	height: 0rpx;
	line-height: 70rpx;
	text-align: right;
	-webkit-transition: all .2s;
	transition: all .2s;
	overflow: hidden;
}

.comm-header-input.active .comm-black{
	display: block;
}
.comm-header-input.active .headerInput .xInput{
	padding-right: 70rpx;
}
.comm-header-input.active .headerInput .xInput .xClear{
	display: block;
}
.comm-header-input.active .headerInput .xCancel{
	width: 92rpx;
	height: 70rpx;
	font-size: 30rpx;
}