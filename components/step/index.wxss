.comm-step{
	width: 100%;
	background: linear-gradient(180deg, transparent 26rpx, #ebebeb 26rpx, #ebebeb 28rpx, transparent 28rpx);
	-webkit-display: flex;
	display: flex;
}
.comm-step .item{
	-webkit-flex: 1;
	flex: 1;
}
.comm-step .item:first-of-type{
	background: linear-gradient(90deg, #fff 50%, transparent 50%);
}
.comm-step .item:last-of-type{
	font-size: 0;
	background: linear-gradient(90deg, transparent 50%, #fff 50%);
}
.comm-step .item .dot{
	color: #fff;
	background: #ccc;
	border: solid e9e9e9 2rpx;
	border-radius: 50%;
	width: 54rpx;
	height: 54rpx;
	line-height: 54rpx;
	margin: 0 auto;
	text-align: center;
}
.comm-step .item:last-of-type .dot{
	background-image: url('data:image/png;base64,');
	background-position: center;
	background-repeat: no-repeat;
	-webkit-background-size: 27rpx 19rpx;
	background-size: 27rpx 19rpx;
}
.comm-step .item .label{
	font-size: 24rpx;
	line-height: 60rpx;
	text-align: center;
}
.comm-step .item.active .dot{
	background-color: #17305c;
	border: solid #6e89b8 2rpx;
}
.comm-step .item.active .label{
	color: #17305c;
}

