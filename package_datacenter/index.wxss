page {
  background: #f5f5f5;
}
.container {
  width: 100%;
  height: 100rpx;
  padding: 0 32rpx;
}

.sale-con {
  background:rgba(255,255,255,1);
  box-shadow:0rpx 8rpx 14rpx 0rpx rgba(22,29,159,0.1);
  border-radius:10rpx;
  padding: 30rpx;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}

.sale-con .sale-header {
  display: flex;
  justify-content: space-between;
}

.sale-con .sale-header .sale-title {
  font-size:30rpx;
  font-weight:600;
  color:rgba(40,40,40,1);
  line-height:30rpx;
}

.sale-con .sale-body {
  margin-top: 30rpx;
  display: flex;
  justify-content: 'space-around';
}

.sale-con .sale-body .sale-item {
  flex: 1;
  text-align:center;
}

.sale-con .sale-body .item-val {
  font-size:60rpx;
  font-weight: 600;
  color:rgba(255,84,0,1);
}

.sale-con .sale-body .item-label {
  font-size:30rpx;
  font-weight:400;
  color:rgba(23,48,92,1);
  line-height:30rpx;
}

.router .router-item {
  height: 140rpx;
  padding: 0 40rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  color: #fff;
  display: flex;
}

.router .router-item .router-title {
  width:100%;
  font-size:30rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  letter-spacing:4rpx;
  line-height: 140rpx;
}

.router .router-item .router-img {
  width: 160rpx;
  height: 80rpx;
  line-height: 140rpx;
  padding-left: 70rpx;
  padding-top: 30rpx;
}

.router .router-item .router-btn-img {
  width: 44rpx;
  height: 44rpx;
  line-height: 140rpx;
  padding-left: 70rpx;
  padding-top: 50rpx;
}

.compass_pel_flow_bg {
  background:linear-gradient(90deg,rgba(255,84,0,1) 0%,rgba(242,157,115,1) 100%);
  box-shadow:0px 2px 4px 0px rgba(218,145,109,1);
}
.compass_coupon_bg {
  background:linear-gradient(90deg,rgba(23,48,92,1) 0%,rgba(34,65,120,1) 100%);
  box-shadow:0px 2px 4px 0px rgba(74,74,74,1);
}