.banner{
	width: 100%;
	height: 360rpx;
}
.body{
	font-size: 0;
	margin: -40rpx 25rpx 200rpx;
}
.body .nav{
	width: 224rpx;
	height: 224rpx;
	background: #fff;
	border: solid #e8e9f2 1rpx;
	border-radius: 20rpx;
	margin-right: 14rpx;
	margin-bottom: 14rpx;
	-webkit-box-shadow: 0 10rpx 30rpx #eaebf3;
	box-shadow: 0 10rpx 30rpx #eaebf3;
	display: inline-block;
}
.body .nav:nth-of-type(3n){
	margin-right: 0;
}
.body .nav image{
	width: 180rpx;
	height: 110rpx;
	margin: 22rpx;
	margin-bottom: 0;
}
.body .nav .label{
	font-size: 30rpx;
	line-height: 50rpx;
	margin-top: 15rpx;
	text-align: center;
}