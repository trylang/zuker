.form{
	padding: 30rpx;
}
.form .label{
	color: #999;
	font-size: 28rpx;
	line-height: 50rpx;
	margin-top: 20rpx;
}
.form .label:first-of-type{
	margin: 0;
}
.form .formItem{
	font-size: 36rpx;
	line-height: 88rpx;
	-webkit-display: flex;
	display: flex;
}
.form .formItem input{
	min-height: 88rpx;
	line-height: 88rpx;
	border-bottom: #ccc solid 1rpx;
	-webkit-flex: 1;
	flex: 1;
}
.form .formItem.multiline{
	font-size: 0;
	-webkit-display: block;
	display: block;
}
.form .formItem .delete{
	width: 60rpx;
	height: 60rpx;
	background-color: rgba(0, 0, 0, .5);
	background-image: url(data:image/png;base64,);
	background-position: center;
	background-repeat: no-repeat;
	-webkit-background-size: 40rpx;
	background-size: 40rpx;
	position: absolute;
	right: 0;
	top: 0;
}
.form .formItem.multiline .image{
	color: #999;
	font-size: 26rpx;
	width: 210rpx;
	height: 210rpx;
	background: #f5f5f7;
	border: #f2f2f2 solid 1rpx;
	padding-top: 120rpx;
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	vertical-align: top;
	text-align: center;
	display: inline-block;
	position: relative;
}
.form .formItem.multiline .image:before,
.form .formItem.multiline .image:after{
	content: '';
	background: #ccc;
	border-radius: 2rpx;
	display: block;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	position: absolute;
	left: 50%;
	top: 50%;
}
.form .formItem.multiline .image:before{
	width: 4rpx;
	height: 40rpx;
}
.form .formItem.multiline .image:after{
	width: 40rpx;
	height: 4rpx;
}
.form .formItem.multiline .image:nth-of-type(3n){
	margin-right: 0;
}
.form .formItem.multiline .image.none{
	padding: 0;
}
.form .formItem.multiline .image.none:before,
.form .formItem.multiline .image.none:after{
	display: none;
}