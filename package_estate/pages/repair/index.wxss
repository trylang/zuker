page{
	background: #f5f5f5;
}

.list{
	background: #fff;
	margin: 20rpx 0;
	padding: 0 30rpx;
}
.list .item{
	font-size: 0;
	border-bottom: solid #eee 1rpx;
	padding: 30rpx 0;
}
.list .item:last-of-type{
	border: none;
}
.list image{
	width: 140rpx;
	height: 140rpx;
	vertical-align: top;
	display: inline-block;
}
.list .container{
	font-size: 30rpx;
	width: 500rpx;
	margin-left: 35rpx;
	display: inline-block;
}
.list .container .title{
	font-size: 40rpx;
	font-weight: bold;
	line-height: 50rpx;
	white-space: nowrap;
	-ms-text-overflow: ellipsis;
	text-overflow: ellipsis;
	overflow: hidden;
}
.list .container .tag{
	font-size: 26rpx;
	line-height: 50rpx;
}
.list .container .tag view.blue,
.list .container .tag view.red{
	line-height: 30rpx;
	border-style: solid;
	border-width: 1rpx;
	border-radius: 8rpx;
	padding: 2rpx 5rpx;
	margin-left: 10rpx;
	vertical-align: middle;
	display: inline-block;
}
.list .container .tag view:first-of-type{
	margin-left: 0;
}
.list .container .tag view.blue{
	color: #3a6dc4;
	border-color: #3a6dc4;
}
.list .container .tag view.red{
	color: #ff5400;
	border-color: #ff5400;
}
.list .container .tag view.star{
	width: 185rpx;
	border: none;
	vertical-align: middle;
	margin-left: 20rpx;
	display: inline-block;
}
.list .container .tag view.score{
	color: #aaa;
	border: none;
	vertical-align: middle;
	margin-left: 10rpx;
	display: inline-block;
}
.list .container .time{
	color: #999;
	line-height: 40rpx;
	white-space: nowrap;
	-ms-text-overflow: ellipsis;
	text-overflow: ellipsis;
	overflow: hidden;
}

.bottomer{
	width: 100%;
	height: 150rpx;
}
