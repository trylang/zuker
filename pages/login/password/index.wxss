page{
	background: #f5f5f5;
}

.header{
	min-height: 500rpx;
}
.header .error{
	font-size: 36rpx;
	color: #fff;
	line-height: 80rpx;
	background: #fb8989;
	text-align: center;
}
.header .form{
	background: #fff;
	padding: 0 30rpx;
}
.header .form input{
	font-size: 35rpx;
	height: 90rpx;
	line-height: 90rpx;
	border-bottom: solid #eee 1rpx;
	padding: 0 20rpx;
}
.header .form .placeholder{
	color: #aaa;
}
.header .tip{
	color: #ff5400;
	font-size: 28rpx;
	line-height: 40rpx;
	padding: 30rpx;
}
.header .form .vcode{
	position: relative;
}
.header .form .vcode .button{
	color: #ff5400;
	line-height: 50rpx;
	border: solid #ff5400 1rpx;
	border-radius: 50rpx;
	padding: 0 25rpx;
	position: absolute;
	right: 0;
	top: 50%;
	margin-top: -25rpx;
  z-index:100000;
}
.header .form .vcode .button.disabled{
	color: #ccc;
	border: solid #ccc 1rpx;
}
.confirm.button{
	font-size: 36rpx;
	color: #fff;
	background: #ff5400;
	border-radius: 12rpx;
	height: 80rpx;
	line-height: 80rpx;
	margin: 0 30rpx;
	text-align: center;
}
.confirm.button.disabled{
	background: #ccc;
}
