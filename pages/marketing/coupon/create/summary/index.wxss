.summary{
	padding: 40rpx 36rpx;
}

.summary .item{
	font-size: 0;
	color: #fff;
	width: 100%;
	height: 180rpx;
	border-radius: 12rpx;
	margin-bottom: 20rpx;
	padding: 20rpx;
	position: relative;
}
.summary .item:before,
.summary .item:after{
	content: '';
	width: 20rpx;
	height: 20rpx;
	background: #fff;
	border-radius: 50%;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	position: absolute;
	left: 211rpx;
	top: 0;
	display: block;
}
.summary .item:after{
	top: 100%;
}

.summary .item .icon{
	width: 170rpx;
	height: 140rpx;
	vertical-align: top;
	display: inline-block;
	position: relative;
}
.summary .item .icon:after{
	content: '';
	width: 0;
	height: 100%;
	border-left: dashed #fff 1rpx;
	display: block;
	position: absolute;
	right: -20rpx;
	top: 0;
}
.summary .item .content{
	font-size: 40rpx;
	line-height: 50rpx;
	width: 420rpx;
	margin-left: 40rpx;
	padding-top: 20rpx;
	display: inline-block;
}
.summary .item .content .detail{
	font-size: 28rpx;
}



