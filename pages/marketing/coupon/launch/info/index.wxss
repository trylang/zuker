.header{
	width: 750rpx;
	min-height: 450rpx;
	position: relative;
	overflow: hidden;
}
.header:before{
	content: '';
	width: 100%;
	height: 250rpx;
	background: #17305c;
	display: block;
}
.header:after{
	content: '';
	width: 50%;
	height: 100rpx;
	background: #17305c;
	border-bottom-left-radius: 100%;
	border-bottom-right-radius: 100%;
	-webkit-transform-origin: left top;
	transform-origin: left top;
	-webkit-transform: scaleX(2);
	transform: scaleX(2);
	display: block;
}
.header .overview{
	color: #fff;
	width: 100%;
	text-align: center;
	position: absolute;
	top: 10rpx;
	left: 0;
	z-index: 10;
}
.header .overview image{
	width: 140rpx;
	height: 140rpx;
	border-radius: 50%;
}
.header .overview .title{
	font-size: 36rpx;
}
.header .overview .title .tag{
	font-size: 24rpx;
	width: 32rpx;
	height: 32rpx;
	line-height: 32rpx;
	background: #ff5400;
	margin-right: 5rpx;
	margin-top: -5rpx;
	vertical-align: middle;
	text-align: center;
	display: inline-block;
	overflow: hidden;
}
.header .overview .title .tag.blue{
	background: #3a6dc4;
}
.header .overview .extend{
	line-height: 50rpx;
}
.header .info{
	width: 690rpx;
	background: #fff;
	border-radius: 12rpx;
	padding: 30rpx;
	-webkit-box-shadow: 0 5rpx 30rpx rgba(23, 48, 92, .15);
	box-shadow: 0 5rpx 30rpx rgba(23, 48, 92, .15);
	position: absolute;
	left: 50%;
	margin-left: -345rpx;
	top: 270rpx;
	z-index: 10;
}
.header .info .row.flex{
	-webkit-display: flex;
	display: flex;
}
.header .info .row.flex .col{
	font-size: 26rpx;
	color: #999;
	-webkit-flex: 1;
	flex: 1;
	text-align: center;
}
.header .info .row.flex .col view{
	font-size: 40rpx;
	font-weight: bold;
	color: #000;
	line-height: 50rpx;
}

.couponList{
	background: #fff;
	padding: 30rpx;
}
.couponList .coupon{
	padding: 0 30rpx;
}
.couponList .coupon .arrow{
	width: 100%;
	line-height: 120rpx;
	border-bottom: solid #f8f8f8 1rpx;
	padding-right: 30rpx;
	-webkit-display: flex;
	display: flex;
	position: relative;
}
.couponList .coupon .arrow:after{
	content: '';
	width: 10rpx;
	height: 10rpx;
	border-right: #666 solid 2rpx;
	border-bottom: #666 solid 2rpx;
	-webkit-transform: rotate(-45deg);
	transform: rotate(-45deg);
	position: absolute;
	right: 0;
	top: 55rpx;
}
.couponList .coupon .arrow .name{
	font-size: 36rpx;
	white-space: nowrap;
	overflow: hidden;
	-ms-text-overflow: ellipsis;
	text-overflow: ellipsis;
	-webkit-flex: 1;
	flex: 1;
}
.couponList .coupon .arrow .analysis{
	color: #666;
	font-size: 24rpx;
	text-align: right;
	white-space: nowrap;
	-webkit-flex: 1;
	flex: 1;
}
.couponList .coupon:last-of-type{
	border: none;
}
.bottomer{
	width: 100%;
	height: 150rpx;
}


