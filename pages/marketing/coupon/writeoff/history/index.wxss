.activity .header{
	background: #efefef;
	padding: 20rpx 30rpx;
	display: block;
}
.activity .header .item:nth-of-type(n+2){
	margin-top: 20rpx;
	position: relative;
}
.controller{
	font-size: 0;
	text-align: center;
}
.controller .button{
	font-size: 34rpx;
	line-height: 88rpx;
	border: solid #ff5400 1rpx;
	border-radius: 10rpx;
	padding: 0 110rpx;
	margin-right: 20rpx;
	display: inline-block;
}
.controller .button:last-of-type{
	margin: 0;
}
.controller .button.fill{
	color: #fff;
	background: #ff5400;
}
.selector{
	border-bottom: solid #e6e6e6 1rpx;
	-webkit-display: flex;
	display: flex;
	position: relative;
}
.selector .item{
	padding: 10rpx 0;
	-webkit-flex: 1;
	flex: 1;
	width: 33.33%;
}
.selector .dropdown{
	width: 100%;
	background: #fff;
	position: absolute;
	left: 0;
	top: 100%;
	z-index: 999;
}
.selector .dropdown .list{
	font-size: 34rpx;
	width: 100%;
	line-height: 100rpx;
	padding: 0 50rpx;
	white-space: nowrap;
	text-align: center;
	overflow: hidden;
	-ms-text-overflow: ellipsis;
	text-overflow: ellipsis;
}
.selector .dropdown .list.active{
	color: #ff5400;
}
.selector .dropdown .list:last-of-type{
	margin-bottom: 30rpx;
}
.couponList{
	background: #fff;
	margin: 10rpx 0;
	padding: 0 30rpx 150rpx;
}
.couponList .coupon{
	border-bottom: solid #eee 1rpx;
	padding: 15rpx;
}
.couponList .coupon:nth-of-type(2n){
	background: #fcfcfc;
}
.couponList .coupon:last-of-type{
	border: none;
}
.couponList .coupon .row{
	min-height: 50rpx;
	-webkit-display: flex;
	display: flex;
}
.couponList .coupon .row .title{
	width: 60%;
	white-space: nowrap;
	overflow: hidden;
	-ms-text-overflow: ellipsis;
	text-overflow: ellipsis;
}
.couponList .coupon .row .exntend{
	font-size: 26rpx;
	-webkit-flex: 1;
	flex: 1;
	white-space: nowrap;
	text-align: right;
	overflow: hidden;
	-ms-text-overflow: ellipsis;
	text-overflow: ellipsis;
}