/* pages/marketing/facetoface/index.wxss */
.header{
	margin: 55rpx 30rpx;
}
.body{
	margin: 100rpx 75rpx;
}
.body .search{
	height: 85rpx;
	border: solid #ccc 1rpx;
	border-radius: 100rpx;
	-webkit-display: flex;
	display: flex;
}
.body .search input{
	color: #333;
	height: 85rpx;
	line-height: 85rpx;
	text-align: center;
	display: inline-block;
	-webkit-flex: 1;
	flex: 1;
}
.body input.placeholder{
	color: 999;
}
.body .search .clear{
	width: 44rpx;
	height: 44rpx;
	background: #ccc;
	border: solid #fff 7rpx;
	border-radius: 50%;
	-webkit-transform: rotate(45deg);
	transform: rotate(45deg);
	margin-top: 18rpx;
	margin-right: 10rpx;
	display: inline-block;
	position: relative;
}
.body .clear:before,
.body .clear:after{
	content: '';
	background: #fff;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	display: block;
	position: absolute;
	left: 50%;
	top: 50%;
}
.body .clear:before{
	width: 15rpx;
	height: 3rpx;
}
.body .clear:after{
	width: 3rpx;
	height: 15rpx;
}
.footer{
	margin: 0 90rpx;
}
.footer .button{
	width: 100%;
	font-size: 36rpx;
	color: #fff;
	height: 80rpx;
	line-height: 80rpx;
	background: #ff5400;
	border: solid #ff5400 1rpx;
	border-radius: 12rpx;
	margin-bottom: 30rpx;
	text-align: center;
}
.footer .button.border{
	color: #ff5400;
	background: #fff;
}
.footer .button.disabled{
	background: #ccc;
	border: solid #ccc 1rpx;
}



