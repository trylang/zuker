.header{
	margin: 55rpx 30rpx;
}
.body{
	border-bottom: solid #efefef 1rpx;
	padding-bottom: 50rpx;
	margin: 50rpx;
	position: relative;
}

.body .figure {
  display: flex;
}

.body image{
	width: 100rpx;
	height: 100rpx;
	/* border-radius: 50%; */
	display: block;
}

.body .figure .figure-right {
  flex: 1;
  padding-left: 40rpx;
  color: #000;
  font-size: 24rpx;
}

.body .figure-name {
  color: #282828;
  font-size: 36rpx;
  font-weight:500;
  line-height: 36rpx;
  height: 56rpx;
}

.body .input {
  margin: 40rpx 0 80rpx 0;
  display: flex;
  border-bottom: 1px solid #EFEFEF;
}

.body .input-icon {
  color: #282828;
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 20rpx;
}

.body .input-text {
  flex:1;
  height: 80rpx;
  line-height: 80rpx;
  color: #FF5400;
  font-size: 60rpx;
}

.body .upload {
  margin-top: 60rpx 0;
}

.body .upload .desc {
  color: #282828;
  font-size: 30rpx;
}

.body .upload .desc .mark{
  display: inline;
  color: #999999;
  font-size: 24rpx;
}

.footer{
	padding: 10rpx 30rpx;
}

/* 上传图片 */

.upload .formItem {
  margin-top: 30rpx;
}

.upload .formItem .delete{
	width: 60rpx;
	height: 60rpx;
	background-color: rgba(0, 0, 0, .5);
	background-image: url(data:image/png;base64,);
	background-position: center;
	background-repeat: no-repeat;
	-webkit-background-size: 40rpx;
	background-size: 40rpx;
	position: absolute;
	right: 0;
	top: 0;
}

.upload .formItem .delete.transparent{
	background-color: transparent;
	background-image: url(data:image/jpeg;base64,);
}
.upload .formItem.multiline{
	font-size: 0;
	-webkit-display: block;
	display: block;
}
.upload .formItem.multiline .image{
	color: #999;
	font-size: 26rpx;
	width: 202rpx;
	height: 202rpx;
	background: #f5f5f7;
	border: #f2f2f2 solid 1rpx;
	padding-top: 120rpx;
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	vertical-align: top;
	text-align: center;
	display: inline-block;
	position: relative;
}
.upload .formItem.multiline .image:before,
.upload .formItem.multiline .image:after{
	content: '';
	background: #ccc;
	border-radius: 2rpx;
	display: block;
	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);
	position: absolute;
	left: 50%;
	top: 50%;
}
.upload .formItem.multiline .image:before{
	width: 4rpx;
	height: 40rpx;
}
.upload .formItem.multiline .image:after{
	width: 40rpx;
	height: 4rpx;
}
.upload .formItem.multiline .image:nth-of-type(3n){
	margin-right: 0;
}
.upload .formItem.multiline .image.none{
	padding: 0;
}
.upload .formItem.multiline .image.none:before,
.upload .formItem.multiline .image.none:after{
	display: none;
}
.upload .formItem.instrument{
	position: relative;
}
.upload .formItem.instrument .delete{
	right: 0;
	top: 50%;
	margin-top: -30rpx;
	z-index: 99;
}

