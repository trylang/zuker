.header{
	min-height: 250rpx;
	position: relative;
}
.header:before{
	content: '';
	width: 100%;
	height: 40rpx;
	background: #17305c;
	display: block;
}
.header:after{
	content: '';
	width: 50%;
	height: 160rpx;
	background: #17305c;
	border-bottom-left-radius: 100%;
	border-bottom-right-radius: 100%;
	-webkit-transform-origin: left top;
	transform-origin: left top;
	-webkit-transform: scaleX(2);
	transform: scaleX(2);
	display: block;
}
.header .info{
	width: 690rpx;
	background: #fff;
	border-radius: 12rpx;
	padding: 30rpx;
	-webkit-box-shadow: 0 5rpx 30rpx rgba(23, 48, 92, .15);
	box-shadow: 0 5rpx 30rpx rgba(23, 48, 92, .15);
	position: absolute;
	left: 50%;
	margin-left: -345rpx;
	top: 40rpx;
	z-index: 99;
}
.header .info .row.flex{
	-webkit-display: flex;
	display: flex;
}
.header .info .row.flex image{
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
}
.header .info .row.flex .col{
	color: #17305c;
	padding-left: 30rpx;
	padding-top: 10rpx;
	line-height: 50rpx;
	-webkit-flex: 1;
	flex: 1;
}
.header .info .row.flex .col .title{
	font-size: 38rpx;
	font-weight: bold;
	line-height: 50rpx;
	overflow: hidden;
	text-overflow: ellipsis;
}
.header .info .row.flex .col .content{
	position: relative;
}
.header .info .row.flex .col .content .button{
	font-size: 24rpx;
	color: #999;
	width: 125rpx;
	line-height: 53rpx;
	border: solid #999 1rpx;
	border-radius: 50rpx;
	text-align: center;
	position: absolute;
	right: 0;
	top: 0;
}

.nav{
	margin: 0 22rpx;
}
.nav .item{
	line-height: 110rpx;
	border-bottom: #eee solid 1rpx;
	position: relative;
}
.nav .item:after{
	content: '';
	width: 12rpx;
	height: 12rpx;
	border-top: solid #aaa 1rpx;
	border-right: solid #aaa 1rpx;
	-webkit-transform: rotate(45deg);
	transform: rotate(45deg);
	display: block;
	position: absolute;
	right: 30rpx;
	top: 50%;
}
.nav .item image{
	width: 80rpx;
	height: 80rpx;
	vertical-align: middle;
}


