page{
	background: #f5f5f5;
}

.header{
	min-height: 500rpx;
}
.header .error{
	font-size: 36rpx;
	color: #fff;
	line-height: 80rpx;
	background: #fb8989;
	text-align: center;
}
.header .form{
	background: #fff;
	padding: 0 30rpx;
}
.header .form input{
	font-size: 35rpx;
	height: 90rpx;
	line-height: 90rpx;
	border-bottom: solid #eee 1rpx;
	padding: 0 20rpx;
}
.header .form .placeholder{
	color: #aaa;
}
.header .tip{
	color: #ff5400;
	font-size: 28rpx;
	line-height: 40rpx;
	padding: 30rpx;
}
.footer{
	margin: 0 30rpx;
}
